<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >

            <TextView
                android:id="@+id/teamAName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text="Team A"
                android:gravity="center_horizontal"
                android:padding="4dp"

                />

            <TextView
                android:id="@+id/teamAScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="36sp"
                android:text="0"
                android:padding="4dp"
                android:textColor="#2196F3"
                />

            <TextView
                android:id="@+id/teamAPenaltyCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:text="0"
                android:padding="4dp"
                android:textColor="@android:color/holo_red_dark"
                />

            <Button
                android:id="@+id/fivePointsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5 Try"
                android:layout_margin="8dp"
                android:onClick="addFivePointsTeamA"
                />

            <Button
                android:id="@+id/twoPointsA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Conversion"
                android:layout_margin="8dp"
                android:onClick="addTwoPointsTeamA"
                />

            <Button
                android:id="@+id/penaltyKickA"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Penalty Kick"
                android:layout_margin="8dp"
                android:onClick="addThreePointsTeamA"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/teamBName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="34sp"
                android:text="Team B"
                android:gravity="center_horizontal"
                android:padding="4dp"

                />

            <TextView
                android:id="@+id/teamBScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="36sp"
                android:text="0"
                android:padding="4dp"
                android:textColor="#2196F3"
                />

            <TextView
                android:id="@+id/teamBPenaltyCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="24sp"
                android:text="0"
                android:padding="4dp"
                android:textColor="@android:color/holo_red_dark"
                />

            <Button
                android:id="@+id/fivePointsB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+5 Try"
                android:layout_margin="8dp"
                android:onClick="addFivePointsTeamB"
                />
            <Button
                android:id="@+id/twoPointsB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+2 Conversion"
                android:layout_margin="8dp"
                android:onClick="addTwoPointsTeamB"
                />
            <Button
                android:id="@+id/penaltyKickB"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="+3 Penalty Kick"
                android:layout_margin="8dp"
                android:onClick="addThreePointsTeamB"
                />


        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/reset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Reset"
android:layout_margin="24dp"
        android:onClick="resetBothTeams"

        />

</android.widget.LinearLayout>